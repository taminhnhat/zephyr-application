    "configurations": [
        {
            "name": "Cortex Debug (JLink remote)",
            "cwd": "${workspaceRoot}",
            "executable": "./build/zephyr/zephyr.hex",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "servertype": "jlink",
            "serverArgs": [
